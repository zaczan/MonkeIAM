        script.init(type='text/javascript').
            var editor
            $(document).ready(function () {
                editor = new $.fn.dataTable.Editor({
                    ajax: "/user/data",
                    table: "#example",
                    fields: [{
                        label: "id:",
                        name: "id"
                    }, {
                        label: "username:",
                        name: "username"
                    }
                    ]
                });

                $('#example').DataTable({
                    dom: "Bfrtip",
                    ajax: "/user/data",
                    columns: [
                        {data: "id"},
                        {data: "username"}
                    ],
                    select: true,
                    buttons: [
                        {extend: "create", editor: editor},
                        {extend: "edit", editor: editor},
                        {extend: "remove", editor: editor}
                    ]
                });
            });
